apiVersion: apps/v1
kind: Deployment
metadata:
 name: mysql-deployment
spec:
 replicas: 1
 selector:
  matchLabels:
   name: mysql
 metadata:
  label
   app: mysql
 spec:
  metadata
  containers:
  - name: mysql
    image: mysql
    ports:
    - containerPort: 3306
    env:
    - name: MYSQL_ROOT_PASSWORD
      valueFrom:
       secretKeyRef:
        name: mysql-secret
        key: mysql-password
    volumes:
    - name: mysql-volumes
      mountPath: /var/lib/mysql
    persistentVolumeClaim:
     claimName: mysql-pvc
