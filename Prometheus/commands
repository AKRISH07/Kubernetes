helm install prometheus stable/prometheus-operator
#name should be specified in helm3

helm repo add prometheus-community https://prometheus-community.github.io/helm-charts
#for adding repo

helm show values prometheus-community/prometheus-mongodb-exporter > values.yml
#for saving mongodb-exporter config inside values.yml for editing

helm install mongodb-exporter prometheus-community/prometheus-mongodb-exporter -f values.yml
#for installing chart

kubectl get servicemonitors
kubectl get svc 

kubectl port-forward service/mongodb-exporter-prometheus-mongodb-exporter 9216
#shows mongodb metrics on prometheus ui in /metrics end point

kubectl get deployments
kubectl port-forward deployment/prometheus-grafana 3000
#grafana ui
